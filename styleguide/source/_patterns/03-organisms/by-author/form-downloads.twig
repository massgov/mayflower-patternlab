{% set listingClass = formDownloads.listing ? ' ma__form-downloads--listing' : '' %}
<section class="ma__form-downloads{{ listingClass }}">
  {% if formDownloads.compHeading %}
    {% set compHeading = formDownloads.compHeading %}
    {% include "@atoms/04-headings/comp-heading.twig" %}
  {% endif %}
  {% if formDownloads.sidebarHeading %}
    {% set sidebarHeading = formDownloads.sidebarHeading %}
    {% include "@atoms/04-headings/sidebar-heading.twig" %}
  {% endif %}
  <div class="ma__form-downloads__links">
    {% block formDownloadLinks %}
      {% for item in formDownloads.downloadLinks %}
        {% set downloadLink = item.downloadLink %}
        {% include "@molecules/download-link.twig" %}
      {% endfor %}
    {% endblock %}
  </div>
  {% if formDownloads.more %}
    <div class="ma__form-downloads__see-all">
      {% set decorativeLink = formDownloads.more %}
      {% include "@atoms/decorative-link.twig" %}
    </div>
  {% endif %}
</section>
