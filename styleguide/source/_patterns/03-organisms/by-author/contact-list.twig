{% set contactUsClass = "" %}
{% if contactList.viewSpecific %}
  {% set contactUsClass = contactUsClass ~ 'ma__contact-list--view-specific' %}
{% endif %}
{% if contactList.columns %}
  {% set contactUsClass = contactUsClass ~ 'ma__contact-list--columns' %}
{% endif %}

<section class="ma__contact-list {{ contactUsClass }}">
  {% set contactHeading = 2 %}

  {% if contactList.compHeading %}
    {% set compHeading = contactList.compHeading %}
    {% include "@atoms/04-headings/comp-heading.twig" %}
    {% set contactHeading = (compHeading.level ? : contactHeading) + 1 %}
  {% endif %}

  {% if contactList.sidebarHeading %}
    {% set sidebarHeading = contactList.sidebarHeading %}
    {% include "@atoms/04-headings/sidebar-heading.twig" %}
    {% set contactHeading = (sidebarHeading.level ? : contactHeading) + 1 %}
  {% endif %}

  {% block contactListContacts %}
    {% for contact in contactList.contacts %}
      {% set contactUs = contact|merge({"level": contactHeading}) %}
      {% include "@molecules/contact-us.twig" %}
    {% endfor %}
  {% endblock %}
</section>
