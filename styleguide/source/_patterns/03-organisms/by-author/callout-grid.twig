<section class="ma__callout-grid">
  <div class="ma__callout-grid__container">
    {% if calloutGrid.compHeading %}
      {% set compHeading = calloutGrid.compHeading %}
      {% include "@atoms/04-headings/comp-heading.twig" %}
    {% endif %}
    {% if calloutGrid.sidebarHeading %}
      {% set sidebarHeading = calloutGrid.sidebarHeading %}
      {% include "@atoms/04-headings/sidebar-heading.twig" %}
    {% endif %}
    <div class="ma__callout-grid__items">
      {% for link in calloutGrid.links %}
        {% if link.image %}
          {% set illustratedLink = link %}
          {% include "@molecules/illustrated-link.twig" %}
        {% else %}
          {% set calloutLink = link %}
          {% include "@molecules/callout-link.twig" %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

