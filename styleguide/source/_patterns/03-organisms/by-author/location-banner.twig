{% set locationBannerId = locationBanner.id ? : 'banner-id' %}

<section class="ma__location-banner">
  <style>
    #{{ locationBannerId }} {
      background-image: url('{{ locationBanner.bgNarrow }}');
    }
    
    @media (min-width: 801px) {
      #{{ locationBannerId }} {
        background-image: url('{{ locationBanner.bgWide }}');
      }
    }
  </style>
  <div class="ma__location-banner__map">
    {% set googleMap = locationBanner.actionMap ? : locationBanner.googleMap %}
    {% include "@molecules/google-map.twig" %}
  </div>
  <div 
    class="ma__location-banner__image" 
    id="{{ locationBannerId }}"
    role="img"
    aria-label="{{ locationBanner.bgInfo }}">
  </div>
</section>