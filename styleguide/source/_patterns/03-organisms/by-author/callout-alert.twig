{% set calloutAlert = calloutAlert.decorativeLink %}

<section class="ma__callout-alert js-clickable">
  {% if calloutAlert.href %}
    <a class="ma__callout-alert__content" 
      href="{{ calloutAlert.href }}"
      {% if calloutAlert.info %}
        aria-label="{{ calloutAlert.info }}"
      {% endif %}
      {% if calloutAlert.property %}
        property="{{ calloutAlert.property }}"
      {% endif %}>
      <div class="ma__callout-alert__icon">
        {% include "@atoms/05-icons/svg-alert.twig" %}
      </div>
      <div class="ma__callout-alert__link">
        <span>{{ calloutAlert.text }}&nbsp;{% include "@atoms/05-icons/svg-arrow.twig" %}</span>
      </div>
    </a>
  {% else %}
    <div class="ma__callout-alert__content">
      <div class="ma__callout-alert__icon">
        {% include "@atoms/05-icons/svg-alert.twig" %}
      </div>
      <div class="ma__callout-alert__link">
        {{ calloutAlert.text }}
      </div>
    </div>
  {% endif %}
</section>
