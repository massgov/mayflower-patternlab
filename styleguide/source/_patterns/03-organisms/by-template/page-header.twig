<section class="ma__page-header">
  <div class="ma__page-header__content">
    <h1 class="ma__page-header__title">{{pageHeader.title}}</h1>
    {% if pageHeader.subTitle %}
      <h4 class="ma__page-header__sub-title">{{pageHeader.subTitle}}</h4>
    {% endif %}
    {% if pageHeader.rteElements %}
      <div class="ma__page-header__intro">
        {% set rteElements = pageHeader.rteElements %}
        {% include "@organisms/by-author/rich-text.twig" %}
      </div>
    {% endif %}
  </div>
  {% if pageHeader.headerTags.taxonomyTerms %}
    {% set headerTags = pageHeader.headerTags %}
    {% include "@molecules/header-tags.twig" %}
  {% endif %}
</section>
