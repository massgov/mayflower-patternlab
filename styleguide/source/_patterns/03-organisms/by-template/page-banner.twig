{% if pageBanner.size %}
  {% set sizeClass = "ma__page-banner--" ~ pageBanner.size %}
{% endif %}

{% if pageBanner.color %}
  {% set colorClass = "ma__page-banner--" ~ pageBanner.color %}
{% endif %}

{# adding ma__page-banner--child shows a different version #}


<section class="ma__page-banner {{ sizeClass }} {{ colorClass }}">
  <style>
    .ma__page-banner {
      background-image: url('{{ pageBanner.bgNarrow }}');
    }

    @media (min-width: 801px) {
      .ma__page-banner {
        background-image: url('{{ pageBanner.bgWide }}');
      }
    }
  </style>
  <div class="ma__page-banner__container">
    <div class="ma__page-banner__content" property="mainEntityOfPage">
      {% if pageBanner.icon %}
        <div class="ma__page-banner__icon">
          {% include pageBanner.icon %}
        </div>
      {% endif %}
      <h1 class="ma__page-banner__title">
        {{ pageBanner.title }}
        {% if pageBanner.titleSubText %}
          <span> {{ pageBanner.titleSubText }}</span>
        {% endif %}
      </h1>
      {% if pageBanner.description %}
        <p class="ma__page-banner__description">
          {{ pageBanner.description }}
        </p>
      {% endif %}
    </div>
  </div>
</section>