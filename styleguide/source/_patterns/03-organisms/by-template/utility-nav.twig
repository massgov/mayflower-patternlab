<section class="ma__utility-nav js-util-nav">
  <ul class="ma__utility-nav__items">
    <li class="ma__utility-nav__item">
      <div class="ma__utility-nav__translate">
        {% include "@atoms/05-icons/svg-lat-lon-globe.twig" %}
        <span>
          <div id="google_translate_element"></div>
          <script>
            function googleTranslateElementInit() {
              new google.translate.TranslateElement({pageLanguage: 'en', includedLanguages: 'ar,es,fr,ht,it,km,ko,pt,ru,vi,zh-CN', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
            }

            (function() {
              var script = document.createElement('script');
              script.src = "//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit";
              script.async = true;
              element = document.getElementsByTagName('head')[0]; 
              element.append(script);
            })();
          </script>
        </span>
      </div>
    </li>
    {% for item in utilityNav.items %}
      <li class="ma__utility-nav__item js-util-nav-toggle">
        <a class="ma__utility-nav__link" 
          href="#" 
          title="{{ item.text }}">
          {% include item.icon %}
          <span>
            {{ item.text }}
          </span>
        </a>
        <div aria-hidden="true" class="ma__utility-nav__content js-util-nav-content is-closed">
          <div class="ma__utility-nav__container">
            <div class="ma__utility-nav__content-title">
              <button class="ma__utility-nav__close js-close-util-nav"><span>{{ item.closeText }}</span><span role="presentation">+</span></button>
              {% include item.icon %}
              <span>{{ item.text }}</span>
            </div>
            <div class="ma__utility-nav__content-body">
              {% include item.panel %}
            </div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>
