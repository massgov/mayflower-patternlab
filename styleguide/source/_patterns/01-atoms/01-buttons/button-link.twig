{% set buttonClassSize = buttonLink.size ? "ma__button--" ~ buttonLink.size : "" %}
{% set buttonClass = "ma__button" %}

{% if buttonLink.outline %}
  {% set buttonClass = buttonClass ~ "-minor" %}
{% endif %}

{% if buttonLink.theme %}
  {% set buttonClass = buttonClass ~ "-" ~ buttonLink.theme %}
{% endif %}

<a 
  href="{{ buttonLink.href }}" 
  class="{{ buttonClass }} {{ buttonClassSize }}"
  title="{{ buttonLink.info }}">
	{{ buttonLink.text }}
</a>
