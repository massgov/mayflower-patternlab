{% set level = level ?: 4 %}
<h{{ level }} class="ma__column-heading">
  {% if columnHeading.href %}
    {% set decorativeLink = {
      "text": columnHeading.text, 
      "href": columnHeading.href,
      "info": columnHeading.info
    } %}
    {% include "@atoms/decorative-link.twig" %}
  {% else %}
    {{columnHeading.text}}
  {% endif %}
</h{{ level }}>