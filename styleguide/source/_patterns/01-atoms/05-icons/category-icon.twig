

{% set smallClass = categoryIcon.small ? "ma__category-icon--small" : "" %}

{# Backward compatible with Release5.7.0 where small was a string value #}
{% if categoryIcon.small is same as ("false") %}
  {% set smallClass = "" %}
{% endif %}

<figure class="ma__category-icon {{ smallClass }}" aria-hidden>
  {% include categoryIcon.icon %}
</figure>
