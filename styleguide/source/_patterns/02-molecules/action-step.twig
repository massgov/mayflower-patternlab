<section class="ma__action-step">
  {% set richText = actionStep.richText %}
  {% include "@organisms/by-author/rich-text.twig" %}
  {% if actionStep.downloadLinks %}
    <div class="ma__action-step__downloads">
      {% for item in actionStep.downloadLinks %}
        {% set downloadLink = item.downloadLink %}
        {% include "@molecules/download-link.twig" %}
      {% endfor %}
    </div>
  {% endif %}
  {% if actionStep.decorativeLink %}
    {% set decorativeLink = actionStep.decorativeLink %}
    {% include "@atoms/decorative-link.twig" %}
  {% endif %}
</section>
