    "stepsUnordered": {
      "compHeading": {
        "title": "How To Apply",
        "sub": true,
        "color": "",
        "id": "how-to-apply",
        "centered": ""
      },
      "richText": {
        "rteElements": [{
          "path": "@atoms/11-text/paragraph.twig",
          "data": {
            "paragraph" : {
              "text": "You must submit a form. Morbi euismod enim eget neque. Donec sagittis massa. Vestibulum quis augue sit amet ipsum laoreet pretium."
            }
          }
