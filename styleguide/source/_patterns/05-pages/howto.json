        "richText": {
          "rteElements": [{
            "path": "@atoms/11-text/paragraph.twig",
            "data": {
              "paragraph": {
                "text": "You must start requesting weekly benefits on the Sunday after you submit your application form. Every time you request weekly benefits, you’ll be asked  3 questions for the previous week, Saturday to Saturday:"
              }
            }
          },{
            "path": "@atoms/08-lists/ordered-list.twig",
            "data": {
              "orderedList": [{
                "text": "If you looked for work that week"
              },{
                "text": "If you were able to work and available for work that week"
              },{
                "text": "If you worked during that week"
              }]
            }
          },{
            "path": "@atoms/11-text/paragraph.twig",
            "data": {
              "paragraph": {
                "text": "You have to complete this step every week to make sure you get your benefits. You must do this step online."
              }
