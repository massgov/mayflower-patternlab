      "steps": [{
        "accordion": true,
        "isExpanded": false,
        "accordionLabel": "Expand step for doing this online",
        "icon":"@atoms/05-icons/svg-laptop.twig",
        "title":"Online",
        "richText": {
          "rteElements": [{
            "path": "@atoms/11-text/paragraph.twig",
            "data": {
              "paragraph": {
                "text": "To apply online, you can create an account on the <a href=\"#\">UI Online portal</a>. The website will walk you through filling out your application. Once you file your initial application, you'll be able to log into your account to check your status."
              }
            }
          },{
            "path": "@atoms/11-text/paragraph.twig",
            "data": {
              "paragraph": {
                "text": "Don't have a compute?  Visit a <a href=\"#\">One-Stop Career Center</a> where you can use one of theirs to file your claim and get help finding a job."
              }
            }
          },{
            "path": "@atoms/08-lists/ordered-list.twig",
            "data": {
              "orderedList": [{
                "text": "Ordered list example"
