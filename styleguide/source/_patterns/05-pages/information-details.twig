{% extends '@templates/01-content-types/information-details.twig' %}

{% block header %}
  {% include "@organisms/by-template/header.twig" %}
{% endblock %}

{% block preContent %}
  {% set pageHeader = preContent.pageHeader %}
  {% include "@organisms/by-template/page-header.twig" %}

  {% if preContent.stickyTOC %}
    {% set stickyTOC = preContent.stickyTOC %}
    {% include "@organisms/by-template/sticky-toc.twig" %}
  {% endif %}
{% endblock %}

{% block preContentMedia %}
  {% set richText = preContentMedia.post_header_media %}
  {% include "@organisms/by-author/rich-text.twig" %}
{% endblock %}

{% block pageContent %}

  {% if pageContent.section1 %}
  {% set richText = pageContent.section1 %}
  {% include "@organisms/by-author/rich-text.twig" %}
  {% endif %}

  {% if pageContent.section2 %}
    {% set richText = pageContent.section2 %}
    {% include "@organisms/by-author/rich-text.twig" %}
  {% endif %}

  {% if pageContent.section3 %}
    {% set richText = pageContent.section3 %}
    {% include "@organisms/by-author/rich-text.twig" %}
  {% endif %}

  {% if pageContent.section4 %}
    {% set richText = pageContent.section4 %}
    {% include "@organisms/by-author/rich-text.twig" %}
  {% endif %}

  {% if pageContent.section5 %}
    {% set richText = pageContent.section5 %}
    {% include "@organisms/by-author/rich-text.twig" %}
  {% endif %}

{% endblock %}

{% block postContent %}
  {% if postContent.contactList %}
    {% set contactList = postContent.contactList %}
    {% include "@organisms/by-author/contact-list.twig" %}
  {% endif %}

  {% if postContent.footnoteList %}
    {% set footnoteList = postContent.footnoteList %}
    {% include "@organisms/by-author/footnote-list.twig" %}
  {% endif %}

  {% if postContent.postDateslistingTable %}
    {% set listingTable = postContent.postDateslistingTable %}
    {% include "@molecules/listing-table.twig" %}
  {% endif %}

  {% if postContent.relatedLinkList %}
    {% set linkList = postContent.relatedLinkList %}
    {% include "@organisms/by-author/link-list.twig" %}
  {% endif %}

  {% if postContent.imageCredit %}
    {% set imageCredit = postContent.imageCredit %}
    {% include "@organisms/by-template/image-credit.twig" %}
  {% endif %}

{% endblock %}

{% block sidebar %}
  {% set linkList = sidebar.linkList %}
  {% include "@organisms/by-author/link-list.twig" %}
{% endblock %}




{% block footer %}
  {% include "@organisms/by-template/footer.twig" %}
{% endblock %}


