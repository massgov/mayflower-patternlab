{# site header #}
{% block header %}{% endblock %}

<main
  id="main-content"
  class="ma__information-details"
  tabindex="-1"
  {% if schemaPageType %} typeof="{{schemaPageType}}"{% endif %}>
  <div class="pre-content">
    {% block preContent %}
      {% include "@organisms/by-template/page-header.twig" %}
    {% endblock %}
  </div>
  <div class="main-content main-content--two">

    <div class="page-content">

      <div class="ma__information-details__content">

        {% block pageContent %}
          {% include "@base/placeholder.twig" with {'placeholder':{'text':'Page Content'}} %}
        {% endblock %}
      </div>
    </div>

    <aside class="sidebar {{ sidebar.coloredHeadings ? 'sidebar--colored' : '' }}">
      {% if sidebar.contactList %}
        {% set contactList = sidebar.contactList %}
        {% include "@organisms/by-author/contact-list.twig" %}
      {% endif %}
      {% if sidebar %}
        {% block sidebar %}
          {% include "@base/placeholder.twig" with {'placeholder':{'text':'Right Rail'}} %}
        {% endblock %}
      {% endif %}
    </aside>

  </div>
  <div class="post-content">
    {% block postContent %}
      {% include "@base/placeholder.twig" with {'placeholder':{'text':'Post Content'}} %}
    {% endblock %}
  </div>

  {# structured content #}
  {% block schemaContent %}{% endblock %}
</main>

{# site footer #}
{% block footer %}{% endblock %}

