{% block header %}
  {% include "@organisms/by-template/header.twig" %}
{% endblock %}

<main id="main-content" tabindex="-1">
  <div class="pre-content">
    {% block preContent %}
      {% include "@organisms/by-template/page-header.twig" %}
    {% endblock %}
  </div>
  <div class="main-content main-content--two">
    <div class="page-content">
      {% block pageContent %}
        {% for alert in pageContent.alerts %}
          {% if alert.compHeading %}
            {% set compHeading = alert.compHeading %}
            {% include "@atoms/04-headings/comp-heading.twig" %}
          {% endif %}
          {% if alert.calloutTime %}
            {% set calloutTime = alert.calloutTime %}
            {% include "@organisms/by-author/callout-time.twig" %}
          {% endif %}
          {% if alert.richText %}
            {% set richText = alert.richText %}
            {% include "@organisms/by-author/rich-text.twig" %}
          {% endif %}
        {% endfor %}
      {% endblock %}
    </div>
    <aside class="sidebar {{ sidebar.coloredHeadings ? 'sidebar--colored' : '' }}">
      {% block sidebar %}
        {% if sidebar.contactList %}
          {% set contactList = sidebar.contactList %}
          {% include "@organisms/by-author/contact-list.twig" %}
        {% endif %}
        {% include "@base/placeholder.twig" with {'placeholder':{'text':'Right Rail'}} %}
      {% endblock %}
    </aside>
  </div>
  <div class="post-content">
    {% block postContent %}
      {% include "@base/placeholder.twig" with {'placeholder':{'text':'Post Content'}} %}
    {% endblock %}
  </div>
  {% block schemaContent %}{% endblock %}
</main>

{% block footer %}
  {% include "@organisms/by-template/footer.twig" %}
{% endblock %}
