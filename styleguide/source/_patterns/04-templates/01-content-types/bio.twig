
{# site header #}
{% block header %}{% endblock %}

<main id="main-content" class="ma__bio" tabindex="-1">
  <div class="pre-content">
    {% block preContent %}
      {% include "@organisms/by-template/page-header.twig" %}
    {% endblock %}
  </div>
  <div class="ma__bio__content">
    <div class="main-content main-content--two">
      <div class="page-content">
        {% if mainContent.richText %}
          {% set richText = mainContent.richText %}
          {% include "@organisms/by-author/rich-text.twig" %}
        {% endif %}

        {% block pageContent %}
          {% include "@base/placeholder.twig" with {'placeholder':{'text':'Page Content'}} %}
        {% endblock %}

        {% if mainContent.roles %}
          {% set linkList = mainContent.roles %}
          {% include "@organisms/by-author/link-list.twig" %}
        {% endif %}

        {% if mainContent.personalMessage %}
          {% set personalMessage = mainContent.personalMessage %}
          {% include "@organisms/by-author/personal-message.twig" %}
        {% endif %}
      </div>
      <aside class="sidebar {{ sidebar.coloredHeadings ? 'sidebar--colored' : '' }}">
        {% if sideContent.headshot.image or sideContent.headshot.downloadLink %}
          <div class="ma__bio__headshot">
            {% if sideContent.headshot.image %}
              {% set image = sideContent.headshot.image %}
              {% include "@atoms/09-media/image.twig" %}
            {% endif %}
            {% if sideContent.headshot.downloadLink %}
              {% set decorativeLink = sideContent.headshot.downloadLink %}
              {% include "@atoms/decorative-link.twig" %}
            {% endif %}
          </div>
        {% endif %}

        {% if sideContent.contactList %}
          {% set contactList = sideContent.contactList %}
          {% include "@organisms/by-author/contact-list.twig" %}
        {% endif %}

        {% if sideContent.social %}
          {% set iconLinks = sideContent.social %}
          {% include "@molecules/icon-links.twig" %}
        {% endif %}

        {% block sidebar %}
          {% include "@base/placeholder.twig" with {'placeholder':{'text':'sidebar'}} %}
        {% endblock %}
      </aside>
    </div>
  </div>
  <div class="post-content">
    {% block postContent %}
      {% include "@base/placeholder.twig" with {'placeholder':{'text':'Post Content'}} %}
    {% endblock %}
  </div>
  {% block schemaContent %}{% endblock %}
</main>

{# site footer #}
{% block footer %}{% endblock %}
